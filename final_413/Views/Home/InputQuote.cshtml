@model final_413.Models.Quote
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

@*Movie input form*@
<div class="container">
    <h2>Enter Quote Info:</h2>
    <form method="post">

        <div class="form-group">
            <label asp-for="Quote_body">Quote:</label>
            <input class="form-control" placeholder="Title" asp-for="Quote_body" />
        </div>
        <div class="form-group">
            <label asp-for="Author">Authoer:</label>
            <input class="form-control" placeholder="Title" asp-for="Author" />
        </div>
        <div class="form-group">
            <label asp-for="Date">Date:</label>
            <input class="form-control" placeholder="Year" asp-for="Date" />
        </div>
        <div class="form-group">
            <label asp-for="Subject">Subject:</label>
            <input class="form-control" placeholder="Director" asp-for="Subject" />
        </div>
        <div class="form-group">
            <label asp-for="Citation">Citation:</label>
            <input class="form-control" placeholder="Rating" asp-for="Citation" />
        </div>
        <div class="form-group">
            <button class="btn btn-default" type="submit">Submit</button>
        </div>

        <div asp-validation-summary="All"></div>

    </form>
</div>